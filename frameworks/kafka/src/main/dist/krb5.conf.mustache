[libdefaults]
default_realm = LOCAL
dns_lookup_realm = true
dns_lookup_kdc = true
udp_preference_limit = 1

default_tkt_enctypes = des3-cbc-sha1-kd aes128-cts-hmac-sha1-96 aes256-cts-hmac-sha1-96 rc4-hmac
supported_enctypes = des3-cbc-sha1-kd aes128-cts-hmac-sha1-96 aes256-cts-hmac-sha1-96 rc4-hmac

[realms]
  LOCAL = {
    kdc = {{KDC_HOST_NAME}}:{{KDC_HOST_PORT}}
  }

[domain_realm]
  .kafka.dcos = LOCAL
  kafka.dcos = LOCAL
