[logging]
 default = STDERR
 kdc = STDERR
 admin_server = STDERR

[libdefaults]
 default_realm = LOCAL
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true

[realms]
  LOCAL = {
    kdc = {{KDC_HOST_NAME}}:{{KDC_HOST_PORT}}
  }

[domain_realm]
  .secure-kafka.autoip.dcos.thisdcos.directory = LOCAL
  secure-kafka.autoip.dcos.thisdcos.directory = LOCAL
